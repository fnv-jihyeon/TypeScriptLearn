{
  "name": "back",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e .env.development -- ts-node-dev --respawn --max-http-header-size=65536 --files --require tsconfig-paths/register src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start:prod": "dotenv -e .env.production -- node dist/server.js",
    "prisma:dev": "dotenv -e .env.development -- prisma db push --schema=prisma/schema.sqlite.prisma",
    "prisma:migrate:local": "dotenv -e .env.development.pg -- prisma migrate dev --schema=prisma/schema.postgres.prisma",
    "prisma:deploy": "dotenv -e .env.production -- prisma migrate deploy --schema=prisma/schema.postgres.prisma",
    "prisma:gen:dev": "prisma generate --schema=prisma/schema.sqlite.prisma",
    "prisma:gen:prod": "prisma generate --schema=prisma/schema.postgres.prisma",
    "db:studio:dev": "dotenv -e .env.development -- prisma studio --schema=prisma/schema.sqlite.prisma",
    "db:studio:localpg": "dotenv -e .env.development.pg -- prisma studio --schema=prisma/schema.postgres.prisma",
    "db:studio:prod": "dotenv -e .env.production -- prisma studio --schema=prisma/schema.postgres.prisma",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
